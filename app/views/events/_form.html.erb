<div style ="box-shadow: 3px 3px 3px 3px solid black;text-align:center">
	<%= form_for (@event) do |f| %>
	<div style = "text-align:center;display:inline-block">
		<%= f.label :title %>
		<br>
		<%= f.text_field :title, class: "form-control", style: "width:50em"  %>
		<br>
		<%= f.label :detail %>
		<br>
		<%= f.text_area :detail, class: "form-control", rows: "5", id: "comment", style: "width:50em;height:30rem"  %>
		<br>
		<div style = "height:3rem">
    	</div>
		<%= f.submit "Post new event", class: "btn btn-default" %>
	</div>
	<% end %>
</div>