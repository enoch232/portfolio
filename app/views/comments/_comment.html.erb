<div style = "margin:0 3rem 0 3rem">
	<hr>
<%= div_for(comment) do %>
	<div>
		<%= comment.body %>
	</div>
	<div style = "font-size:1rem;color:#111111">
		Posted by <%= comment.commentor %> <%= time_ago_in_words(comment.created_at) %> ago.
	</div>
	<% if user_signed_in? %>
		<%= link_to "Delete", comment_path(comment), method: :delete, class: "deletebutton" %>
	<% end %>
	<br>
<% end %>
</div>