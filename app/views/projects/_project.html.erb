<%= div_for(project) do %>
<%= link_to project.url do %>
<div class = "indexproject" id = "boxshadow">
	<div class = "indexprojectarea">
		<div class = "project-description hidden-class">
			<%= project.description %>
		</div>
		<div style = "margin:0 auto;position:relative;z-index:999;top:0">
			<%= image_tag project.image.url(:large), class: "project-image"%>
			<div class = "index-project-title"><%= truncate(project.title, length:25) %></div>
		</div>
	</div>
	<div class = "index-project-madeof">
		<%= project.madeof %>
	</div>
	<% if current_user %>
	<div>
		<div style = "display:inline-block">
			<%= link_to "Edit", edit_project_path(project), class: "btn btn-default" %>
		</div>
		<div style = "display:inline-block">
			<%= link_to "Delete", project, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
		</div>
	</div>
	<% end %>
</div>
<script>
$('div#<%= dom_id(project) %> .indexprojectarea').on("mouseenter",function(){
	$('div#<%= dom_id(project) %> .project-description').removeClass("hidden-class");
});
$('div#<%= dom_id(project) %> .indexprojectarea').on("mouseleave",function(){
	$('div#<%= dom_id(project) %> .project-description').addClass("hidden-class");
});
</script>
<% end %>
<% end %>