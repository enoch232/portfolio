
<div style = "text-align:center;">
  <h1 class = "fontLato">List of Projects</h1>
  <hr style = "display:inline-block;width:50%">
</div>
<div>
  <% @projects.each do |project| %>

  <div class = "projectViews fontLato animated fadeIn">
    <div style = "text-align:center;width: 100%;font-size:1.5em" >
      <%= project.title %>
    </div>
    <div class = "visible-xs-block hidden-lg"style = "width: 100%;height:5em;color:#525252">
      <%= truncate project.description , length: 13 %>
    </div>
    <div class = "hidden-xs" style = "width: 100%;height:5em;color:#525252">
      <%= project.description %>
    </div>
    <div style = "text-align:center;width: 100%" >
      <%= link_to "View", project.url, class: "btn btn-default" %>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_project_path(project) , class: "btn btn-default" %>
        <%= link_to "Delete", project, method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger" %>
      <% end %>
    </div>

  </div>
  <% end %>
</div>

