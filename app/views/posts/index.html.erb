<div style = "text-align:center;">
  <h1 class = "fontLato">List of Articles</h1>
  <hr style = "display:inline-block;width:50%">
</div>


<div style = "text-align:center;margin:0 0 0 0">
  <% @posts.each do |post| %>

  <div class = "postViews fontLato animated fadeIn">
    <div style = "text-align:left;width: 100%;font-size:1.5rem" >
      <%= link_to post.title, post %> - <%= time_ago_in_words(post.created_at) %> ago.
    </div>
    <div style = "text-align:right" >
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post, method: :delete, data: {confirm: "Are you sure?"}%>
      <% end %>
    </div>

  </div>
  <% end %>
</div>
