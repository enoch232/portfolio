<div style = "text-align:center;">
  <h1 class = "fontLato">List of Articles</h1>
  <hr style = "display:inline-block;width:50%">
</div>


<div style = "text-align:center;margin:0 0 0 0">
  <% @posts.each do |post| %>

  <div class = "postViews fontLato animated fadeIn">
    <div style = "text-align:center;width: 100%;font-size:1.5rem" >
      <%= link_to post.title, post %>
    </div>
    <hr class = "hr-2">
    <div class = ".visible-xs-block hidden-xs" style = "width: 100%;height:4rem;color:#525252" >
      <%= post.body %>
    </div>
    <div style = "text-align:center;width: 100%" >
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default"%>
        <%= link_to "Delete", post, method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger" %>
      <% end %>
    </div>

  </div>
  <% end %>
</div>
