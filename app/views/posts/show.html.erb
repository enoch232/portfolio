<div>
	<div style = "text-align:center;font-size:3em;margin:3rem" class = "fontOpen">
		<%= @post.title %>
	</div>
	<div class = "fontOpen post-show-body">
		<%= @post.body.html_safe  %>
	</div>
	<br>
	<div id = "comment-holder" class = "fontOpen">
		<%= render partial: @post.comments%>
	</div>
</div>


<div style = "text-align:center">
	<%= render "comments/form" %>
	
</div>
<div style = "text-align:center">
	<% if user_signed_in? %>
		<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default fontOpen" %>
	<% end %>
		<%= link_to 'Back', posts_path, class: "btn btn-default fontOpen" %>
</div>
